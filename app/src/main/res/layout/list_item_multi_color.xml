<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/range_tv"
            style="@style/laila_medium_12"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/rect_white_with_border"
            android:gravity="center"
            android:paddingVertical="@dimen/_6sdp"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/text_color_iv"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/range_tv"
            android:background="@drawable/rect_white_with_border"
            android:src="@drawable/rect_white_solid_5" />

        <ImageView
            android:id="@+id/shadow_color_iv"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/text_color_iv"
            android:background="@drawable/rect_white_with_border"
            android:src="@drawable/rect_white_solid_5" />

        <ImageView
            android:id="@+id/edit_iv"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>

</layout>